{
  "compilerOptions": {
    
    "target": "es2022",
    "lib": ["ES2023"],

    "paths": {
      "@/*": ["./src/*"]
    },

    /* Modules */
    "module": "node20",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
